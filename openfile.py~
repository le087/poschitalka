import pygtk
pygtk.require('2.0')
import gtk, sys


    #диалог открытия файла
    def on_clk_open(self, widget):
        openfile = gtk.FileSelection("Открыть файл")
        openfile.run()
        p = open(openfile.get_filename, 'r')
        per = p.readline()
        print p
        openfile.destroy()
